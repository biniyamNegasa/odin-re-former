<h2>Edit Existing User </h2>

<%= form_with model: @user do |form| %>
  <%= form.label :username, "User Name" %>
  <%= form.text_field :username, placeholder: "johndoe"%>
  <% @user.errors[:username].each do |error| %>
    <div><%= error %></div>
  <% end %>
  <%= form.label :email, "E-mail" %>
  <%= form.email_field :email, placeholder: "example@example.com"%>
  <% @user.errors[:email].each do |error| %>
    <div><%= error %></div>
  <% end %>
  <%= form.label :password, "Password" %>
  <%= form.password_field :password %>
  <% @user.errors[:password].each do |error| %>
    <div><%= error %></div>
  <% end %>
  <%= form.submit "Sign Up"%>
<% end %>